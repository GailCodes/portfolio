---
interface Props {
  maxCharacterWidth?: number;
  bottomMargin?: string;
}

const { maxCharacterWidth, bottomMargin } = Astro.props;

const maxCharacterWidthDefault = 100;
const bottomMarginDefault = "40px";
---

<div
  class="text-block"
  style={`max-width: ${maxCharacterWidth || maxCharacterWidthDefault}ch; margin-bottom: ${bottomMargin || bottomMarginDefault}`}
>
  <slot />
</div>
