---
interface Props {
  fontSize?: string;
}

const fontSizeDefault = "1.2rem";
---

<p style={`font-size: ${Astro.props.fontSize || fontSizeDefault}`}>
  <slot />
</p>

<style>
  p {
    color: var(--primary-color);
    font-family: "Open Sans", sans-serif;
    font-weight: 400;
    line-height: 2;
  }
</style>
