---
interface Props {
  opacity?: number;
}

const { opacity } = Astro.props;
---

<div
  class="background-filter"
  style={`background-color: rgba(0, 0, 0, ${opacity || "0.5"})`}
>
</div>

<style>
  .background-filter {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* background-color: rgba(0, 0, 0, 0.8); */
    z-index: 0;
  }
</style>
